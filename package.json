{
  "name": "connect-four",
  "version": "1.0.0",
  "description": "A Connect Four web app implemented in JS using Mithril",
  "main": "public/server/index.js",
  "scripts": {
    "start": "node -r esm public/server/index.js",
    "build": "gulp build",
    "lint": "eslint app/scripts/**/*.js test/**/*.js",
    "test": "karma start --single-run",
    "coverage": "COVERAGE=true npm test && npm run remap-coverage && npm run coverage-report",
    "remap-coverage": "remap-istanbul -i coverage/coverage-unmapped.json -o coverage/coverage-remapped.json -e test/ -e node_modules/",
    "coverage-report": "istanbul report --include coverage/coverage-remapped.json lcov text html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caleb531/connect-four.git"
  },
  "keywords": [
    "connect-four",
    "mithril"
  ],
  "author": "Caleb Evans",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/caleb531/connect-four/issues"
  },
  "homepage": "https://github.com/caleb531/connect-four#readme",
  "dependencies": {
    "clipboard": "^2.0.4",
    "compression": "^1.7.4",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "fastclick": "^1.0.6",
    "mithril": "github:MithrilJS/mithril.js#deaf01c8e96446c97f31826b1d04ab4a4e757718",
    "moment": "^2.24.0",
    "random": "^2.1.1",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "sw-update-manager": "^1.0.0",
    "tiny-emitter": "^1.1.0",
    "underscore": "^1.9.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.6.0",
    "chai": "^4.2.0",
    "chai-dom": "^1.8.1",
    "eslint": "^4.19.1",
    "gulp": "^4.0.0",
    "gulp-sass": "^4.0.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-terser": "^1.2.0",
    "istanbul": "^0.4.5",
    "karma": "^3.1.1",
    "karma-chai-dom": "^1.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-sinon-chai": "^2.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "mocha": "^3.5.3",
    "remap-istanbul": "^0.12.0",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-glob-import": "^0.3.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-terser": "3.0.0",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "typeface-ubuntu": "0.0.22",
    "workbox-build": "^3.6.1"
  }
}
